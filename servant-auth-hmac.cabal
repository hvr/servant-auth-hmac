name:                servant-auth-hmac
version:             0.1.0.0
-- synopsis:
-- description:
license:             GPL-3
license-file:        LICENSE
author:              Al Zohali
maintainer:          zohl@fmap.me
-- copyright:
category:            Web
build-type:          Simple
-- extra-source-files:
cabal-version:       >=1.10

flag dev
  description:        Turn on development settings.
  manual:             True
  default:            False

library
  exposed-modules:
    Servant.Server.Experimental.Auth.HMAC
    Servant.Server.Experimental.Auth.HMAC.Internal

  build-depends: base == 4.9.*
               , attoparsec
               , base64-bytestring
               , bytestring
               , case-insensitive
               , cryptonite
               , data-default
               , cereal
               , exceptions
               , http-types
               , memory
               , servant
               , servant-server
               , string-class
               , time
               , wai
  hs-source-dirs:      src
  default-language:    Haskell2010

  if flag(dev)
    ghc-options:      -Wall -Werror
  else
    ghc-options:      -O2 -Wall


executable example
  main-is:             Main.hs
  other-extensions:    DataKinds, TypeFamilies, DeriveGeneric, TypeOperators
  build-depends: base == 4.9.*
               , aeson
               , blaze-html
               , blaze-markup
               , bytestring
               , cereal
               , containers
               , data-default
               , mtl
               , http-media
               , random
               , servant
               , servant-auth-hmac
               , servant-server
               , string-class
               , text
               , transformers
               , unix
               , wai
               , warp
  hs-source-dirs:      example
  default-language:    Haskell2010

  if flag(dev)
    ghc-options:      -Wall -Werror
  else
    ghc-options:      -O2 -Wall


test-suite tests
  type:           exitcode-stdio-1.0

  hs-source-dirs: tests
  main-is:        Main.hs

  extensions: NamedFieldPuns

  build-depends: base == 4.9.*
               , bytestring
               , cereal
               , cryptonite
               , deepseq
               , HUnit
               , servant-auth-hmac
               , servant-server
               , time

  default-language:    Haskell2010

  if flag(dev)
    ghc-options:      -Wall -Werror
  else
    ghc-options:      -O2 -Wall
